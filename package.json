{
  "name": "iobroker.panasonic-comfort-cloud",
  "version": "3.0.3",
  "description": "Adapter for Panasonic Comfort Cloud",
  "author": {
    "name": "marc",
    "email": "marc@lammers.dev"
  },
  "homepage": "https://github.com/marc2016/ioBroker.panasonic-comfort-cloud",
  "license": "MIT",
  "keywords": [
